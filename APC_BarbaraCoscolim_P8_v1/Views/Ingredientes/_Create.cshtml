@model APC_BarbaraCoscolim_P8_v1.Models.Ingrediente

@{
    int i = ViewBag.i == null ? 0 : ViewBag.i;
}

<tr>
    <td>
        @Html.TextBoxFor(model => model.Nome, null, new { @Name = "[" + i + "].Nome", @class = "form-control" })
    </td>
    <td>
        @Html.TextBoxFor(model => model.Quantidade, null, new { @Name = "[" + i + "].Quantidade", @class = "form-control" })
    </td>
    <td>
        @Html.DropDownList("UnidadeMedidaID", null, new { @Name = "[" + i + "].UnidadeMedidaID", @class = "form-control" })
    </td>
</tr>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

