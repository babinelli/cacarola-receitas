@model APC_BarbaraCoscolim_P8_v1.Models.UnidadeMedida

@{
    ViewBag.Title = "Unidade de medida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Unidade de medida - Deletar</h2>

<h3>Tem certeza de que deseja deletar esta unidade de medida?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Unidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unidade)
        </dd>

        <dt>
            @Html.Label("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
