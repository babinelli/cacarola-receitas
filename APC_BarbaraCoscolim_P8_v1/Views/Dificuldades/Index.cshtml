@model IEnumerable<APC_BarbaraCoscolim_P8_v1.Models.Dificuldade>

@{
    ViewBag.Title = "Dificuldade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dificuldade - Lista</h2>

<p>
    @Html.ActionLink("Criar novo grau de dificuldade", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeDificuldade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDificuldade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DificuldadeID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.DificuldadeID })
        </td>
    </tr>
}

</table>
